pipeline {
    agent any

    environment {
        BUCKET = "jenking-demo"
        AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {
        stage('Deploy to S3') {
            steps {
                script {
                    sh "/usr/local/bin/aws configure set region ${AWS_DEFAULT_REGION}"
                    sh "/usr/local/bin/aws s3 sync . s3://$BUCKET --exclude '.git/*'"
                    sh "/usr/local/bin/aws s3 ls s3://$BUCKET"
                }
            }
        }
    }
}


